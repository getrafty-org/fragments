{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist/language-server",
    "rootDir": "./src",
    "baseUrl": "./",
    "tsBuildInfoFile": "../dist/language-server/.tsbuildinfo",
    "paths": {
      "fgmpack-protocol": ["../protocol/src/index"],
      "fgmpack-db": ["../fgmpack-db/src/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../protocol" },
    { "path": "../fgmpack-db" }
  ]
}
