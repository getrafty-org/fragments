{
  "name": "fragments",
  "displayName": "Fragments",
  "description": "Manage versioned code fragments",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fragments.getVersion",
        "title": "Get Active Version",
        "category": "Fragments"
      },
      {
        "command": "fragments.insertMarker",
        "title": "Insert Fragment Marker",
        "category": "Fragments"
      },
      {
        "command": "fragments.listVersions",
        "title": "List Versions",
        "category": "Fragments"
      },
      {
        "command": "fragments.switchVersion",
        "title": "Switch Version",
        "category": "Fragments"
      }
    ],
    "keybindings": [
      {
        "command": "fragments.insertMarker",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "fragments.insertMarker",
          "group": "fragments",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "fragments-protocol": "file:../protocol"
  }
}
