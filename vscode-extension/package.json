{
  "name": "fgmpack",
  "displayName": "fgmpack",
  "description": "Inject versioned text fragments in the source code.",
  "version": "0.1.0",
  "publisher": "getrafty",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fgmpack.getVersion",
        "title": "View Version",
        "category": "fgmpack"
      },
      {
        "command": "fgmpack.insertMarker",
        "title": "Insert",
        "category": "fgmpack"
      },
      {
        "command": "fgmpack.listVersions",
        "title": "List Versions",
        "category": "fgmpack"
      },
      {
        "command": "fgmpack.switchVersion",
        "title": "Set Version",
        "category": "fgmpack"
      }
    ],
    "keybindings": [
      {
        "command": "fgmpack.insertMarker",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "fgmpack.insertMarker",
          "group": "fgmpack",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "build": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "vsce:prepare": "mkdir -p ../dist/vscode-extension/bin && cp package.json ../dist/vscode-extension/ && cp ../.vscodeignore ../dist/vscode-extension/ && cp ../LICENSE ../dist/vscode-extension/ 2>/dev/null || true",
    "vsce:package": "npm run package && npm run vsce:prepare && cd ../dist/vscode-extension && npx vsce package --no-dependencies --out ./bin/",
    "install-extension": "npm run vsce:package && code --install-extension ../dist/vscode-extension/bin/*.vsix"
  },
  "dependencies": {
    "fgmpack-db": "*",
    "fgmpack-protocol": "*"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/vscode": "^1.74.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.6.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "private": true
}
