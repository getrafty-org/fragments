{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist/vscode-extension",
    "rootDir": "./src",
    "baseUrl": ".",
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "tsBuildInfoFile": "../dist/vscode-extension/.tsbuildinfo",
    "types": ["node", "vscode"],
